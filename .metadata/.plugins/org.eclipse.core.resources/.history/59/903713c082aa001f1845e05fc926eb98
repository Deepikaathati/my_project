
public class LoopsREV {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		import java.text.DecimalFormat;

		public class ReverseRoots {
		    public static void main(String[] args) {
		        DecimalFormat df = new DecimalFormat("#.###"); // Format to limit decimals to 3 places
		        
		        System.out.println("Number\tSquare Root\tCube Root");
		        for (int i = 10; i >= 1; i--) {
		            double squareRoot = Math.sqrt(i);
		            double cubeRoot = Math.cbrt(i);
		            
		            // Print the results
		            System.out.println(i + "\t" + df.format(squareRoot) + "\t\t" + df.format(cubeRoot));
		        }
		    }
		}
	}

}
