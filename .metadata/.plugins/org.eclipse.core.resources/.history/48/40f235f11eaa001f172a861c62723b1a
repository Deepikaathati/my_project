public class Doctor {
    // Instance variables
    String name;
    String specialization;
    String hospital;

    // Constructor to initialize instance variables
    public Doctor(String name, String specialization, String hospital) {
        this.name = name;
        this.specialization = specialization;
        this.hospital = hospital;
    }

    // Instance method to display doctor's details
    public void displayDetails() {
        System.out.println("Doctor's Name: " + name);
        System.out.println("Specialization: " + specialization);
        System.out.println("Hospital: " + hospital);
    }

    // Instance method to simulate treating a patient
    public void treatPatient(String patientName) {
        System.out.println(name + " is treating patient: " + patientName);
    }
}

   public class Main {
    public static void main(String[] args) {
        // Creating an object of the Doctor class
        Doctor doctor1 = new Doctor("Dr. Smith", "Cardiology", "City Hospital");
        
        // Calling the instance methods
        doctor1.displayDetails();
        doctor1.treatPatient("John Doe");
    }
}